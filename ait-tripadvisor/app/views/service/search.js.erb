

$("#routes").html("<%= escape_javascript(render(:partial => "display"))%>");
$('.alert').remove()
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    $('main[role="main-fluid"]').prepend(
      "<div class=\"alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>\">" +
        "<button type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-hidden=\"true\">&times;</button>" +
        "<%= escape_javascript(content_tag :div, msg, :id => "flash_#{name}") %>" +
      "</div>"
    )
  <% end %>
<% end %>
