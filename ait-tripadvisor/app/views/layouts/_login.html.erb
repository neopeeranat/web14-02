<div class="nav-form">
<%= form_for(User.new, :url => user_session_path, html:{role:"form"}) do |f| %>




         <div class="form-group">
           <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder:'Email' %>
         </div>


         <div class="form-group">
           <%= f.password_field :password, class: 'form-control', placeholder:'Password' %>
         </div>


         <!-- <div class="form-group">

                  <%= f.check_box :remember_me %> Remember me


              <%= link_to 'Sign up', new_registration_path(User.new), class: 'right'  %>

         </div> -->



        <div class="form-group">
         <%= f.submit "Sign in", :class => "btn btn-login" %>
         <%= link_to 'Sign up', new_registration_path(User.new), class: 'right btn btn-signup'  %>
       </div>


         <div class="form-group">
           <%= link_to  content_tag(:i, '', class:'fa fa-facebook') +  'Sign in with Facebook' , '', id: "sign_in_facebook", class:"btn btn-sm btn-block btn-social btn-facebook" %>
           <%= link_to  content_tag(:i, '', class:'fa fa-twitter') +  'Sign in with Twitter' , '', id: "sign_in_twitter", class:"btn btn-sm btn-block btn-social btn-twitter" %>
           <%= link_to  content_tag(:i, '', class:'fa fa-google-plus') +  'Sign in with Google+' , '', id: "sign_in_google-plus", class:"btn btn-sm btn-block btn-social btn-google-plus" %>
         </div>
 <% end %>
</div>
