<div class="container">
  <div class="page-header">
    <h1>Direction detail</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <td>Origin:</td>
        <td><%= @direction.origin%></td>
      </tr>
      <tr>
        <td>Destination:</td>
        <td><%= @direction.destination%></td>
      </tr>
      <tr>
        <td>Price:</td>
        <td><%= @direction.price%></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td><%= @direction.description%></td>
      </tr>
    </thead>
  </table>

  <div class="row vertical-align">
    <div class="col-md-6 pull-left">
      <%= link_to 'Back', users_directions_path, class:'btn btn-primary' %>
    </div>
    <div class="col-md-6 pull-right vcenter">
      <%= render_shareable url:@social_url  %>
    </div>

  </div>

  <div class="row">
  <div style="padding-top:50px"></div>
      <div class="fb-comments" data-href="<%=@social_url %>" data-width="100%" data-numposts="5" data-colorscheme="light"></div>
  </div>

</div>
