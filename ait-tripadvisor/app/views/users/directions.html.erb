<div class="page-header">
  <h1>Directions</h1>
</div>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Transportation</th>
      <th>Price</th>
      <th  class="col-md-2 col-xd-12"></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.directions.joins('LEFT OUTER JOIN places ON directions.destination_id = places.id').order('places.name').each do |direction| %>
    <tr>
      <td><%= link_to direction.origin, service_place_path(direction.origin) %></td>
      <td><%= link_to direction.destination, service_place_path(direction.destination) %></td>
      <td><%= direction.transportation %></td>
      <td><%= direction.price %></td>
      <td  class="col-md-2 col-xd-12" align="center">
        <%= link_to content_tag('span','',class:"glyphicon glyphicon-info-sign") + ' Detail', users_direction_path(direction), class:'btn btn-primary btn-xs' %>
        <%= link_to content_tag('span','',class:"glyphicon glyphicon-pencil") + ' Edit', edit_users_direction_path(direction), class:'btn btn-warning btn-xs' %>
        <%= link_to content_tag('span','',class:"glyphicon glyphicon-trash") + ' Delete', users_direction_path(direction), class:'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <%end%>
  </tbody>

</table>
